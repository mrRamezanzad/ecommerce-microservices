{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/order/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/order/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/order",
  "projects": {
    "order": {
      "type": "application",
      "root": "apps/order",
      "entryFile": "main",
      "sourceRoot": "apps/order/src",
      "compilerOptions": {
        "tsConfigPath": "apps/order/tsconfig.app.json"
      }
    },
    "discount.api": {
      "type": "application",
      "root": "apps/discount/api",
      "entryFile": "main",
      "sourceRoot": "apps/discount/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/discount/api/tsconfig.app.json",
        "plugins": [
          {
            "name": "@nestjs/swagger",
            "options": {
              "introspectComments": true
            }
          }
        ]
      }
    },
    "discount.grpc": {
      "type": "application",
      "root": "apps/discount/grpc",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/discount/grpc/tsconfig.app.json",
        "watchAssets": true,
        "assets": ["./proto/*.proto"]
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "catalog": {
      "type": "application",
      "root": "apps/catalog",
      "entryFile": "main",
      "sourceRoot": "apps/catalog/src",
      "compilerOptions": {
        "tsConfigPath": "apps/catalog/tsconfig.app.json",
        "plugins": [
          {
            "name": "@nestjs/swagger",
            "options": {
              "introspectComments": true
            }
          }
        ]
      }
    },
    "basket": {
      "type": "application",
      "root": "apps/basket",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/basket/tsconfig.app.json",
        "plugins": [
          {
            "name": "@nestjs/swagger",
            "options": {
              "introspectComments": true
            }
          }
        ]
      }
    }
  }
}
